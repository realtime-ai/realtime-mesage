{
  "name": "@realtime-message/backend",
  "version": "1.0.0",
  "description": "Realtime Message backend server built with Socket.IO and Redis.",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run --config vitest.config.mjs",
    "test:watch": "vitest --config vitest.config.mjs",
    "test:e2e": "REDIS_RUNNING=1 vitest run src/e2e --config vitest.config.mjs",
    "test:all": "npm run test && npm run test:e2e",
    "benchmark:presence": "node benchmark/presence-load-test.mjs",
    "benchmark:sdk": "node benchmark/sdk-presence-load-test.mjs",
    "benchmark:validate": "node benchmark/benchmark-validator.mjs",
    "benchmark:ci": "ROOM_COUNT=10 USERS_PER_ROOM=5 TEST_DURATION_MS=30000 node benchmark/benchmark-validator.mjs benchmark/presence-load-test.mjs"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "dotenv": "^17.2.2",
    "ioredis": "^5.7.0",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/ioredis-mock": "^8.2.6",
    "@types/node": "^24.5.0",
    "ioredis-mock": "^8.9.0",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
