{
  "name": "@realtime-mesage/sdk",
  "version": "1.0.0",
  "description": "Lightweight JavaScript SDK for building real-time messaging applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realtime-ai/realtime-mesage.git",
    "directory": "packages/sdk"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig.json",
    "build:esm": "tsc --project tsconfig.esm.json && node scripts/rename-esm.mjs",
    "dev": "tsc --project tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "demo": "node demo/server.mjs",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'Linting SDK...'",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "socket.io": "^4.8.1"
  },
  "keywords": [
    "socket.io",
    "realtime",
    "presence",
    "websocket",
    "sdk",
    "client"
  ],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
