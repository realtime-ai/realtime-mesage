{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2020",
    "types": ["node"],
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "dist"]
}
