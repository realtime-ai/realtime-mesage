# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Presence Service Configuration
PRESENCE_TTL_MS=30000
PRESENCE_REAPER_INTERVAL_MS=3000
PRESENCE_REAPER_LOOKBACK_MS=60000

# OpenTelemetry Configuration (all optional)
# Tracing is enabled by default, set to "false" to disable
OTEL_ENABLED=true

# Service name (optional, defaults to "realtime-presence-service")
# OTEL_SERVICE_NAME=my-presence-service

# OTLP Collector endpoint (optional, defaults to http://localhost:4318)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Sampling rate 0.0-1.0 (optional, auto: dev=1.0, prod=0.1)
# OTEL_SAMPLING_RATE=1.0
